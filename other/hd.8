; Output hexadecimal code for each character gotten from stdin.

main:	mov ah,8
	int 021h
	cmp al,26
	jz ret
	call hd
	mov al,' '
	call putchar
	jmp main

hd:	push ax
	shr al,4
	call puthex
	pop ax
	and al,0Fh
puthex:
	add al,'0'
	cmp al,'9'
	jbe putchar
	add al,'A'-'9'-1
putchar:
	mov dl,al
	mov ah,2
	int 021h
	ret
